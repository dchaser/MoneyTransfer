<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_margin="40dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/Black"
            android:drawableEnd="@drawable/refresh_right"
            android:drawableRight="@drawable/refresh_right"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/network_check_frag_Rate"
            android:textColor="@color/White"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottom"
        style="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal"
        android:background="@drawable/linearlayout_border"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/etCurrencyRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:lines="1"
            android:background="@color/White"
            android:text="@string/currRate"
            android:textColor="@color/Black"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tvLkr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="@string/network_check_frag_LKR"
            android:textColor="@color/Black"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/CodeNinja/Android/Studio/MoneyTransfer/app/src/main/res/layout/network_currency_rate_fragment.xml -->