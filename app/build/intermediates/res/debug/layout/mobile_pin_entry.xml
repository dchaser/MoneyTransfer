<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:src="@drawable/final_sms_icon_large" />

    <TextView
        android:id="@+id/tvEnterCodeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="1" >

        <EditText
            android:id="@+id/etMobileCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:alpha="1"
            android:background="@color/White"
            android:inputType="number"
            android:padding="5dp" />

        <Button
            android:id="@+id/btnEnterMobileCodeOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:background="#FFC107"
            android:gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:text="OK"
            android:textColor="#455A64" >
        </Button>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/CodeNinja/Android/Studio/MoneyTransfer/app/src/main/res/layout/mobile_pin_entry.xml -->