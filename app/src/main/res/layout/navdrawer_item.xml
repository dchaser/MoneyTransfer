<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:gravity="center_vertical"
    android:textAppearance="?android:attr/textAppearanceLarge" >

    <!-- Hereâ€™s the layout for menu items (file res/layout/navdrawer_item.xml). In this tutorial, a menu item holds a icon and a title. -->

    <ImageView
        android:id="@+id/navmenuitem_icon"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <TextView
        android:id="@+id/navmenuitem_label"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toEndOf="@id/navmenuitem_icon"
        android:layout_toRightOf="@id/navmenuitem_icon"
        android:gravity="center_vertical"
        android:textColor="@color/Black" />

</RelativeLayout>