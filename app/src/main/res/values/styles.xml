<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="colorControlNormal">#455a64</item>
        <item name="colorControlActivated">#455a64</item>
        <item name="colorControlHighlight">#455a64</item>
        <item name="android:spinnerStyle">@style/spinnerStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
        <item name="android:dropDownListViewStyle">@style/spinnerListViewStyle</item>
    </style>

    <!-- progressdialog styles -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
            <item name="android:background">#FFD54F</item>
        <item name="android:textColor">#455A64</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:width">250dip</item>
        <item name="android:height">100dip</item>
    </style>

    <!-- spinner style start -->

    <style name="spinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:background">@drawable/spinner_default_holo_light_am</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#455A64</item>
    </style>

    <style name="spinnerListViewStyle" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:height">3dp</item>
        <item name="android:dividerHeight">3dp</item>
        <item name="android:divider">@color/White</item>
    </style>
    <!-- spinner styles end -->


    <!-- progrss diag -->
    <style name="Theme.MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:textColor">#455A64</item>
    </style>

    <style name="MyActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarSize">65dip</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="CustomEditText" parent="android:Widget.EditText">
        <item name="android:textColor">#37474F</item>
    </style>

    <style name="txtboxRequiredField" parent="android:Widget.EditText">
        <item name="android:textColor">#37474F</item>
        <item name="android:background">#B0BEC5</item>
    </style>

    <style name="txtboxWithSampleData" parent="android:Widget.EditText">
        <item name="android:textColor">#37474F</item>
        <item name="android:background">#B0BEC5</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:background">@drawable/abc_textfield_search_activated_mtrl_alpha</item>
        <item name="android:textColor">#455A64</item>
    </style>

</resources>